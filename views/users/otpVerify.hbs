<section class="vh-100 bg-image">
  <div class="mask d-flex align-items-center h-150 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card my-5" style="border-radius: 15px;">
            <div class="card-body">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form action="/otpverification" method="post">
                <div class="form-outline mb-4">
                  <input type="text" id="form3Example1cg" class="form-control form-control-lg" name="otp"/>
                  <label class="form-label" for="form3Example1cg">Enter OTP</label>
                </div>

                {{#if errMsg}}
                <label class="text-danger">{{errMsg}}</label>
                {{/if}}

                <div class="d-flex justify-content-center">
                  <a href="/"><button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Submit</button></a>
                </div>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>