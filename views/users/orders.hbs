
{{#if orders}}
<section class="page-add cart-page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="page-breadcrumb">
                    <h2>Orders<span>.</span></h2>
                    <a href="#">Home</a>
                    <a href="#">Products</a>
                    <a class="active" href="#"></a>
                </div>
            </div>
            <div class="col-lg-8">
                <img src="" alt="">
            </div>
        </div>
    </div>
</section>
<div class="cart-page" style="margin-bottom: 13rem;">
    <div class="container">
        <div class="cart-table">
            <table class="table-hover table-striped tm-table-striped-even mb-5 text-center" id="productsTable">
                <thead>
                     <tr class="tm-bg-gray">
                                <th>Date</th>
                                <th>Address</th>
                                <th>Mobile</th>
                                <th>Payment</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Cancel</th>
                        </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                            <tr>
                                <td class="tm-product-name">{{date}}</td>
                                <td class="text-center">{{shippingAddress.address}}</td>
                                <td class="text-center">{{shippingAddress.phone}}</td>
                                <td>{{paymentMethod}}</td>
                                <td>{{status}}</td>
                                <td><a class="btn btn-dark" href="/orders/viewProduct/{{_id}}">View Details</a></td>
                                 {{#if isCancelled}}
                                <td><a class=" btn btn-danger text-light">Cancel Order</a></td>
                                 {{else if isDelivered}}
                                <td><a class=" btn btn-danger text-light" data-toggle="modal" data-target="#return{{_id}}">Return Order</a></td>
                                {{else if isReturned}}
                                <td><a href="" class="btn btn-danger disabled">order returned</a> &nbsp;</td>
                                {{else}}
                                <td><a href="" class="btn btn-danger text-light" data-toggle="modal" data-target="#delete{{this._id}}">cancel order</a> &nbsp;</td>
                                {{/if}}

                                {{!-- Cancel Modal --}}
                                <div class="modal fade" id="delete{{_id}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Delete confirmation
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Do you want to cancel order <b class="text-dark"></b>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">cancel</button>
                                                <a href="/cancelOrder/{{_id}}" type="button"
                                                    class="btn btn-danger">yes</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {{!-- Return Order --}}
                                <div class="modal fade" id="return{{_id}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Return confirmation
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Do you want to Return order <b class="text-dark"></b>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">cancel</button>
                                                <a href="/returnOrder/{{_id}}" type="button"
                                                    class="btn btn-danger">yes</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{else}}

<style>
     body {
        background-color: #fff;
    }

    .mt-100 {
        margin-top: 100px;

    }

    .card {
        margin-bottom: 30px;
        border: 0;
        -webkit-transition: all .3s ease;
        transition: all .3s ease;
        letter-spacing: .5px;
        border-radius: 8px;
        -webkit-box-shadow: 1px 5px 24px 0 rgba(68, 102, 242, .05);
        box-shadow: 1px 5px 24px 0 rgba(68, 102, 242, .05);
    }

    .card .card-header {
        background-color: #fff;
        border-bottom: none;
        padding: 24px;
        border-bottom: 1px solid #f6f7fb;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-header:first-child {
        border-radius: calc(.25rem - 1px) calc(.25rem - 1px) 0 0;
    }



    .card .card-body {
        padding: 30px;
        background-color: transparent;
    }

    .btn-primary,
    .btn-primary.disabled,
    .btn-primary:disabled {
        background-color: #4466f2 !important;
        border-color: #4466f2 !important;
    }
</style>


<div class="container-fluid  mt-100">
    <div class="row">
        <div class="col-md-12  my-5">
            <div class="card my-5">
                <div class="card-body cart">
                    <div class="col-sm-12 empty-cart-cls text-center  mb-5">
                        <h3 class="mb-4"><strong>Your Have No Order History</strong></h3>
                        <h4  class="mb-4">Order something to make me happy :)</h4>
                        <a href="/shop" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{/if}}


