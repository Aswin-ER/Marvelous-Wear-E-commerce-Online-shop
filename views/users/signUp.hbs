

<section class="vh-100 bg-image">
  {{!-- style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');"> --}}
  <div class="mask d-flex align-items-center h-150 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card my-5" style="border-radius: 15px;">
            <div class="card-body">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form action="/signup" method="post">
                <div class="form-outline mb-4">
                  <input type="text" id="form3Example1cg" class="form-control form-control-lg" name="name" placeholder="Name"/>
                  <label class="form-label" for="form3Example1cg">Your Name</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="email" id="form3Example3cg" class="form-control form-control-lg" name="email" placeholder="Email"/>
                  <label class="form-label" for="form3Example3cg">Your Email</label>
                </div>
                {{#if emailExist}}
                <label class="text-danger">{{emailExist}}</label>
                {{/if}}

                <div class="form-outline mb-4">
                  <input type="password" id="form3Example4cg" class="form-control form-control-lg" name="password" placeholder="Password"/>
                  <label for="" class="text-danger"><span style='font-size: 12px;'>Password must contain at least 8 characters including one uppercase letter, one lowercase letter, one digit, and one special character (!@#$%^&*).</span></label>
                  {{!-- <label class="form-label" for="form3Example4cg">Password</label> --}}
                </div>
                {{#if errMsg}}
                <label class="text-danger">{{errMsg}}</label>
                {{/if}}

                <div class="form-outline mb-4">
                  <input type="password" id="form3Example4cg" class="form-control form-control-lg" name="password2" placeholder="Confirm Password"/>
                  <label class="form-label" for="form3Example4cg">Confirm Password</label>
                </div>
                {{#if erroreMsg}}
                <label class="text-danger">{{erroreMsg}}</label>
                {{/if}}

                <div class="form-outline mb-4">
                  <input type="tel" id="form3Example4cdg" class="form-control form-control-lg" maxlength="10"
                    name="phone" placeholder="Phone No"/>
                  <label class="form-label" for="form3Example4cdg">Enter your phone No</label>
                </div>
                {{#if errmsg}}
                <label class="text-danger">{{errmsg}}</label>
                {{/if}}

                <div class="d-flex justify-content-center">
                  <a href="/"><button type="submit"
                      class="btn btn-dark btn-block btn-lg text-white">Register</button></a>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/login"
                    class="fw-bold text-primary"><u>Login here</u></a></p>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>