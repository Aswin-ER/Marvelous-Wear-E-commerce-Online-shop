                        <div class="hover-icon">
                            <a href="{{this.images.[0]}}" class="pop-up"><img src="img/icons/zoom-plus.png" alt=""></a>
                        </div>
                    </figure>
                    <div class="product-text">
                        <a href="/product/{{this._id}}">
                            <h5>{{this.name}}</h5>
                            <h6>{{this.category}}</h6>
                            <p>₹{{this.price}}.00</p>
                        </a>
                    </div>
                </div>
