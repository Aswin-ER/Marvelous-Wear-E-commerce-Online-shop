                    <div class="product-text">
                        <a href="/product/{{this._id}}">
                            <h5>{{this.name}}</h5>
                            <h6>{{this.category}}</h6>
                            <p>₹{{this.price}}.00</p>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
            {{else if filteredProducts}}
