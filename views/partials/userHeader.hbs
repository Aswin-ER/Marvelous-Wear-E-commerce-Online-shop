<!-- Page Preloder -->

<style>
    .header-section {
    box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2)
  }
</style>


<div id="preloder">
    <div class="loader"></div>
</div>

<!-- Search model -->
<div class="search-model">
    <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="search-close-switch">+</div>
        <form class="search-model-form">
            <input type="text" id="search-input" placeholder="Search here.....">
        </form>
    </div>
</div>
<!-- Search model end -->

<!-- Header Section Begin -->
<header class="header-section">
    <div class="container-fluid">
        <div class="inner-header">
            <div class="logo">
                <a href="/" style="color: black;">
                    <h5 class="font-weight-bold">MARVELOUS</h5>
                    <h5 class="font-weight-bold" style="margin-right: 60px;">WEAR</h5>
                </a>
            </div>

            {{#if userName}}
            <nav class="main-menu mobile-menu header-right">
                <ul>
                    <li><a href="/" class="mr-2">Home</a></li>
                    <li><a href="/shop" class="mr-2">Shop</a></li>
                    <li><a href="/wishlist" class="mr-2">Wishlist</a></li>
                    <li><a href="/cart" class="mr-2">Cart</a></li>
                    <li><a href="/orders" class="mr-2">Orders</a></li>
                    <li>{{userName}}  &nbsp;<i class="fa-solid fa-caret-down"></i>
                        <ul class="sub-menu">
                            <li><a href="/userProfile">my Profile</a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            {{else}}
            <div class="main-menu mobile-menu header-right">
                <ul>
                    <li><a href="/signUp">Register</a></li> 
                    <li><a href="/login">Login</a></li> 
                </ul>
            </div>
            {{/if}}
        </div>
    </div>
</header>